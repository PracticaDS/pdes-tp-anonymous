{
    "extends": "airbnb-base",
    "env": {
        "es6": true,
        "browser": true,
        "mocha": true
    },
    "rules": {
        "brace-style": [
            "error",
            "stroustrup"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-unused-vars": [
            "warn",
            "error",
            {
              "varsIgnorePattern": "should|expect"
            }
        ],
        "no-var": [
            "off"
        ],
        "one-var": [
            "off"
        ]
    }
}