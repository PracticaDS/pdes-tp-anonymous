{
    "extends": "airbnb-base",
    "env": {
        "es6": true,
        "browser": true,
        "mocha": true
    },
    "rules": {
        "brace-style": ["error", "stroustrup"],
        "comma-dangle": ["error", "never"],
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true}],
        "no-console": ["warn", { "allow": ["info", "error"] }],
        "no-underscore-dangle": ["error", { "allow": ["_id"] }]
    }
}